<script language="javascript" type="text/javascript">
  window.addEventListener('load', function () {
    const items = document.querySelectorAll('.cart-item__details');
    items.forEach(function (item) {
      const options = item.querySelectorAll('.product-option');
      options.forEach(function (option) {
        const dt = option.querySelector('dt');
        const dd = option.querySelector('dd');
        if (dt && dt) {
          if (dt.innerHTML.toLowerCase().includes('hour')) {
            const date = new Date(dd.innerHTML.trim());
            const value = date.getHours() + ':' + (date.getMinutes() < 10 ? '0' : '') + date.getMinutes();
            dd.innerHTML = value;
          }

          if (dt.innerHTML.toLowerCase().includes('staff')) {
            const json = JSON.parse(dd.innerHTML);
            const value = json.anyStaff ? 'Enhver tilgÃ¦ngelig' : json.fullname;
            dd.innerHTML = value;
          }
        }
      });
    });
  });
</script>

