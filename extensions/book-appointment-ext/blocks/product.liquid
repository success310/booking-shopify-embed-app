{%- if block.settings.environment == 'production' -%}
  {%- assign api = 'https://book-appointment-shopify-app.herokuapp.com' -%}
{%- else -%}
  {%- assign api = 'https://d8fd568c8f48.eu.ngrok.io' -%}
{%- endif -%}

<script type="text/javascript">
  //<![CDATA[
  var Shopify = Shopify || {};
  Shopify.api = '{{api}}';
  Shopify.productId = '8006173360445';
  //]]>
</script>

<book-appointment-ext />

{% schema %}
{
  "name": "product",
  "target": "section",
  "javascript": "main.js",
  "templates": ["product"],
  "settings": [
    {
      "label": "Environment",
      "id": "environment",
      "type": "select",
      "options": [
        {
          "label": "Development",
          "value": "development"
        },
        {
          "label": "Production",
          "value": "production"
        }
      ],
      "default": "production"
    }
  ]
}
{% endschema %}
